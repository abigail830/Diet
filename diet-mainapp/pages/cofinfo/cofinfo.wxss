/* pages/cofinfo/cofinfo.wxss */
page {
  height: 100%;
  width: 100%;
  /* background-color: #f0f0f0; */
}
.page{
  margin: 0;
}
.bodyBg{
  width: 100%;
  padding:0;
}
.weui-cells{
  font-size:16px;
  position: static;
}
.weui-cells:after {
  border-bottom: 0;
}
.we-label{
  width:70px;
  color:#1AAD19;
  font-weight:bold;
}
label.weui-cell{
  padding:0;
}
.weui-cell:active {
  background-color: #fff;
}
.weui-cell{
  padding-top:5px;
  padding-bottom:5px;
  position: inherit
}
.cofBg .weui-cell__hd{
  width:30%;
}
.cofBg .weui-cell__bd{
  width:20%;
  text-align: right;
  padding-right: 15px;
}
.cofBg .weui-label{
  width:80px;
}
.weui-panel__hd:after {
   border:none; 
}
.weui-panel__bd {
  padding: 5px 0;
  border-bottom: 1rpx solid #d9d9d9;
}
.weui-badge {
  display: inline-block;
  padding: 0.15em 0.4em;
  min-width: 8px;
  border-radius: 5px;
  background-color: #1AAD19;
  color: #fff;
  line-height: 1.2;
  text-align: center;
  font-size: 16px;
  vertical-align: middle;
}
.weui-select{
  text-align:left;
  border-right: none;
  padding:0;
}
.weui-select:before{
   -webkit-transform:matrix(.71,.71,.71,-.71,0,0); 
  transform:matrix(.71,.71,.71,-.71,0,0);
  right:5px;
}
.weui-cell__bd{
  padding:5px 0;
}
.weui-cell-autoH.weui-cell__bd{
  padding:0;
}
.txtEllipsis{
  max-width:97px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}